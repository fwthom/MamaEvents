  url: @option.new_record? ? event_options_path(@event) : event_option_path(@event, @option),
  method: @option.new_record? ? :post : :patch do |f| %>  
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category, as: :select, collection: ["Alimentaire", "Vestimentaire", "Autre"] %>
  <%= f.input :unit_price %>
  <%= f.input :ticket_ids, 
              as: :check_boxes, 
              collection: @tickets, 
              label_method: :name, 
              value_method: :id, 
              label: "SÃ©lectionner des tickets" %>  
    <%= f.submit "Enregistrer", class:"rounded-button primary"%>
<% end %>