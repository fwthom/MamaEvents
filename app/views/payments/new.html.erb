<div class="container mt-5" data-controller="stripe">
  <h1>Donate</h1>
  <form data-stripe-target="form" data-action="stripe#submit">
    <div class="mb-3">
      <label for="amount" class="form-label">Donation Amount (EUR)</label>
      <input type="number" id="amount" name="amount" class="form-control" step="0.01" placeholder="Enter amount in EUR" required>
    </div>

    <div id="payment-element" data-stripe-target="paymentElement"></div>
    <div class="text-danger mt-3" data-stripe-target="error"></div>

    <button type="submit" class="btn btn-primary mt-3">Donate Now</button>
  </form>
</div>
