<div class="card-option">
  <% if option.emoji.present? %>
    <div class="card-option-emoji">
      <span class="emoji-display"><%= option.emoji %></span>
    </div>
  <% end %>
  <div class="card-option-content">
    <div class="card-option-details">
      <h4 class="card-option-title"><%= option.name %></h4>
      <% if option.description.present? %>
        <p class="card-option-description"><%= option.description %></p>
      <% end %>
      <p class="card-option-price"><strong><%= option.unit_price %> euros</strong></p>
      <p class="card-option-tickets">
        <% if option.tickets.present? %>
          <% option.tickets.each do |ticket| %>
            <span class="ticket-badge"><%= ticket.name %></span>
          <% end %>
        <% else %>
          <span class="ticket-badge">Aucun ticket li√©</span>
        <% end %>
      </p>
    </div>
    <div class="card-option-actions">
      <%= link_to 'Modifier', edit_admin_event_option_path(@event, option), class: 'btn' %>
      <%= link_to 'Dupliquer', new_admin_event_option_path(@event, source_id: option.id), class: 'btn' %>   
    </div>
  </div>
</div>