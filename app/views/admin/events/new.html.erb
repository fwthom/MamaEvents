<div class="event-content-container ">

<h1>Créer un évènement</h1>
<%= simple_form_for @event, url: admin_events_path, method: :post do |f| %>
  <div class="mb-3">
    <%= f.input :name, label: "Nom de l'évènement", input_html: { class: 'form-control' } %>
  </div>
  <div class="mb-3">
    <%= f.input :description, as: :text, label: "Description", input_html: { class: 'form-control' } %>
  </div>
    <div class="mb-3">
      <%= f.input :location, label: "Lieu", input_html: { class: 'form-control' } %>
  </div>
  <div class="mb-3">
  <%= f.input :date, as: :date, html5: true %> 
  </div>
    <%= f.input :photo, as: :file %>
  <div class="mb-3">
    <%= f.button :submit, "Enregistrer", class: "rounded-button primary" %>
  </div>
<% end %>
</div>