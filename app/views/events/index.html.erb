<div class="container-pages-publiques">

  <div >
    <% @events.each do |event| %>
      <div class="index-event-card">
        <% if event.image.attached? %>
          <%= cl_image_tag event.image.key, class: "index-event-card-image" %>
        <% else %>
          <%= image_tag "logo.png", class: "index-event-card-image" %>
        <% end %>
        <div class="event-card-details">
          <h3 class="event-card-title"><%= event.name %></h3>
          <p class="event-card-description"><%= event.description %></p>
          <p class="event-card-date"><%= event.date.strftime('%B %d, %Y') %></p>
        </div>
        <div class="event-card-footer">
          <%= link_to event_path(event) do %>
            <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <%# mettre des photos ?  %>
  </div>
</div>
