<div class="container-pages-publiques">
    <div class="p-event-content-container">
      <h1>Tous nos prochains évènements</h1>
    <div class="p-card-container">
    <% @events.publies.each do |event| %>
      <div class="p-card-event">
        <% if event.image.attached? %>
          <%= cl_image_tag event.image.key%>
        <% else %>
          <%= image_tag "logo.png", class: "p-event-image" %>
        <% end %>
        <h3><%= event.name %></h3>
        <p style="height: 144px"><%= event.description %></p>
        <p><strong>Date :</strong> <%= event.date %></p>
        <%= link_to "S'inscrire", event_path(event), class: "btn btn-rose p-event-action-button" %>
      </div>
    <% end %>
  </div>
</div>
</div>
