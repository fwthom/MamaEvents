<h1>Events#show</h1>
<p>Find me in app/views/events/show.html.erb</p>
<h2>l'évènement</h2>
<%= @event.name  %>
<%= @event.description %>
<%= @event.date %>

<h2>tickets</h2>
<%= link_to "créer ticket", new_ticket_path(@event) %>
<% @tickets.each do |ticket|%>
  <p>___________________________</p>
  <%= ticket.name  %>
  <%= ticket.description  %>
  <%= ticket.unit_price %>
  <%= link_to "éditer", edit_ticket_path(ticket) %>
<% end %>
  <p>___________________________</p>

<h2>options sur cet event</h2>
<% @options.each do |option| %>
  <h4><%= option.name %></h4>
  <p><%= option.description %></p>
  <p><%= option.unit_price %></p>
  <ul>
    <% option.tickets.each do |ticket|%>
    <li><%=  ticket.name%></li>
    <% end %>
  </ul>
  <%= link_to "modifier cette option", edit_option_path(option), class:"btn btn-primary" %>
  <%= link_to "supprimer", option_path(option), data: { turbo_method: :delete}, class:"btn btn-alert" %>
  <p>___________________________</p>
<% end %>

<%= render 'option_form' %>