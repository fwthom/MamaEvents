<h1>SHOW.html de <%= @event.name %></h1>


<div class="container">
  <div class="row">
    <div class="col-xl-2 col-lg-0  m-3"></div>
    <div class=" event-dashboard-card col-xl-3 col-lg-3 m-3 border border-2">
    <%= render'dashboard-participants' %>

    <%# AMENE AUX PARTICIPANTS DE L'EVENT %>

    </div>

    <div class="col-xl-1 col-lg-0  m-3"></div>


      <div class="col-xl-3 col-lg-3  m-3">
       <%= render'dashboard-benevoles' %>

      <%# AMENE AUX BENEVOLES DE L'EVENT %>

      </div>
    <div class="col-xl-2 col-lg-0  m-3"></div>
  </div>



 <div class="row">
<div class="col-xl-2 col-lg-0  m-3"></div>
        <div class="col-xl-3 col-lg-3 m-3">

        <%= render'dashboard-benevoles' %>

        <%# AMENE AUX OPTIONS DE L'EVENT %>

      </div>

<div class="col-xl-1 col-lg-0 m-3"></div>


      <div class="col-xl-3 col-lg-3 m-3">
        <%= @event.name%>
        <%= @event.description %>
        <%= @event.date %>
        <ul>
        <% @tickets.each do |ticket|  %>
          <li><%= ticket.name %>
          <%= ticket.description %>
          <%= ticket.unit_price %>
          </li>
        <% end %>
        </ul>
        <%# AMENE AUX ACTIONS DE L'EVENT %>
          <%= link_to 'courses', event_tickets_path(@event.id) %>
      </div>
<div class="col-xl-1 col-lg-0 m-3"></div>
    </div>




  </div>
