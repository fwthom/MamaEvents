<h1>Events#show</h1>
<p>Find me in app/views/events/show.html.erb</p>
<h2>l'évènement</h2>
<%= @event.name  %>
<%= @event.description %>
<%= @event.date %>

<h2>tickets</h2>
<%= link_to "créer ticket", new_ticket_path(@event) %>
<% @tickets.each do |ticket|%>
  <p>___________________________</p>
  <%= ticket.name  %>
  <%= ticket.description  %>
  <%= ticket.unit_price %>
  <%= link_to "éditer", edit_ticket_path(ticket) %>
<% end %>

<h2>options</h2>
<%= link_to "créer ticket", new_ticket_path(@event) %>
<% @options.each do |option|%>
  <p>___________________________</p>
  <%= option.name  %>
  <%= option.description  %>
  <%= option.unit_price %>
<% end %>


<%= simple_form_for [@option] do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category, as: :select, collection: ["Alimentaire", "Vestimentaire", "Autre"] %>
  <%= f.input :unit_price %>
  <%= f.association :tickets, collection: @tickets, input_html: {multiple: true}, :as => :check_boxes %>
  <%# <%= f.association :ticket_id, collection: @tickets, input_html: {multiple: true}, :as => :check_boxes %> 
  <%= f.submit "Enregistrer", class:"rounded-button primary"%>
<% end %>

