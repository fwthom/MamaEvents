<% if @participation.status != 'confirmed' %>
  <%= link_to new_payment_path(participation_id: @participation.id), class:"text-decoration-none" do %>
    <div class="flash alert-danger">
      <span><strong>Attention!</strong> Votre participation a <%= @participation.ticket.event.name %> n'est pas encore confirmée. Procédez au paiement de <%= @participation.total_amount %></span>
      <i class="fa-solid fa-arrow-right"></i>
    </div>
  <% end %>
<% end %>

<div class="text-center">
  <h2><%= @participation.ticket.event.name %></h2>
  <h3>Bienvenue
    <%= @participant.first_name %>
    <%= @participant.last_name %>
  </h3>

<h5>Vous pratiquez: <%= @participation.ticket.name %></h5>

<p>Mon adresse : <%= @participant.email %></p>
<div class="btn btn-primary">Valider mon panier <%= @total %> euros</div>
<% @total = @participation.ticket.unit_price %>

      <div class=" row justify-content-center">
        <% @orders.each do |order| %>

         <h3> <div><%= order.option.category %></div></h3>

            <% if order.option.category == 'Alimentaire' %>
       <div class ="col-sm-12 col-md-4 col-lg-6 col-xl-6 col-xxl-6">
              <%= render 'show_option_card', option: order.option, order: order, orders: @orders %>
              </div>
              <% @total += order.option.unit_price * order.quantity %>
            <% end %>
        <% end %>
      </div>

      <div class="row justify-content-center">
        <% @orders.each do |order| %>
            <% if order.option.category == 'Vestimentaire' %>
             <div class ="col-sm-12 col-md-4 col-lg-6 col-xl-6 col-xxl-6">
